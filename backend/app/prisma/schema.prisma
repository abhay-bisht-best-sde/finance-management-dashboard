generator client {
  provider      = "prisma-client-py"
  binaryTargets = ["debian-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id          String   @id @default(uuid())
  title       String
  amount      Float
  category    String
  status      String   @default("pending")
  description String?
  date        DateTime
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("expenses")
}